<%= simple_form_for(@lesson) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
   <%= f.input :student_id, :as => :hidden, :input_html => {:value => params[:id]}  %>
    <%= f.input :note%>
    
    <%= f.check_box :present %> " Is this student Present?"
    <%= f.input :cal_date, :as => :hidden, :input_html => { :value => Date.current }  %>
   </div>


<div class="form-actions">
    <%= f.button :submit %>
</div>

    <% end %>